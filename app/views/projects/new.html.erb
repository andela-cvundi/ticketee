<h2>Create a new project</h2>

<% if @project.errors.any? %>
  <div class="error-messages">
    <p><%= pluralize(@project.errors.count, "error") %> prohibited this form from being saved</p>
    <ul>
    <% @project.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@project) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>

  <%= f.label :description %>
  <%= f.text_field :description %>
  <br>

  <%= f.submit %>
<% end %>
