<div class="page-header">
  <h1>Projects</h1>
  <ul class="actions">
    <li><%= link_to "New Project", new_project_path,
      class: "new" %></li>
  </ul>
</div>


<div id="projects">
  <% @projects.each do |project| %>
    <div class="project">
      <h2><%= link_to project.name, project %></h2>
      <p><%= project.description %></p>
    </div>
  <% end %>
</div>


